<head>
  <title> MakersBnB </title>
  <link type="text/css" rel="stylesheet" body="body "href="<%=url('/style.css')%>" />
</head>

<body>
  <% if current_user %>
    <p><b>Hi, <%= current_user.name %> </b></p>
    <form action="/sessions" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input class="sign_out_button" type="submit" value="Sign Out">
    </form>

    <form action="/sessions/<%= current_user.id %>" method="GET">
      <input class="my_account_button" type="submit" value="My Account">
    </form>

    <form action="/spaces/new" method="GET">
      <input class="add_space_button" type="submit" value="Add Space">
    </form>

  <% else %>
    <form action="/registrations/new">
      <input class="sign_up_button" type="submit" value="Sign Up">
    </form>

    <form action="/sign_in">
      <input class="sign_in_button" type="submit" value="Sign In">
    </form>
  <% end %>


  <%= flash[:notice] %>

  <ul>
    <% @spaces.each do |space| %>
      <div id='<%= space.id %>'>
        <li>
          <%= space.name %>
          <%= space.description %>
          <%= space.price_per_night %>
            <form action="/spaces/<%= space.id %>/moreinfo" method="GET">
              <input class="more_info_button" type='submit' value='More Info'>
            </form>
        </li>
        <% end %>
      </div>
  </ul>
</body>
